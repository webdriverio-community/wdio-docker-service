{
  "name": "wdio-docker-service",
  "version": "3.3.1",
  "description": "WebdriverIO service to start and stop docker container (for Selenium and more)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stsvilik/wdio-docker-service.git"
  },
  "bugs": {
    "url": "https://github.com/stsvilik/wdio-docker-service/issues"
  },
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/index.js",
  "exports": {
    ".": [
      {
        "import": "./lib/index.js",
        "require": "./lib/cjs/index.js"
      },
      "./lib/cjs/index.js"
    ]
  },
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=18 || >=20"
  },
  "scripts": {
    "prepublishOnly": "rm -rf ./lib && npm run build",
    "build": "tsc",
    "build:dev": "rm -rf ./lib && tsc --sourceMap",
    "test": "eslint -c .eslintrc.cjs \"src/**\" \"test/**\" && npm run test:unit && npm run test:integration",
    "test:unit": "TSX_TSCONFIG_PATH=./test/tsconfig.json c8 mocha -b",
    "test:app": "wdio ./test/integration/docker-app/wdio.conf.ts",
    "test:selenium": "wdio ./test/integration/docker-selenium/wdio.conf.ts",
    "test:integration": "run-s build:dev test:app test:selenium"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "wdio-service",
    "docker",
    "tests"
  ],
  "author": "Simon Tsvilik",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.105",
    "@types/chai": "^4.3.11",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node-fetch": "^2.6.11",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@wdio/cli": "^8.28.8",
    "@wdio/local-runner": "^8.28.8",
    "@wdio/mocha-framework": "^8.28.8",
    "@wdio/spec-reporter": "^8.28.8",
    "c8": "^9.1.0",
    "chai": "^5.0.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "webdriverio": "^8.28.8"
  },
  "dependencies": {
    "@wdio/logger": "^8.28.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2"
  },
  "contributors": [
    "Simon Tsvilik <webdevsimon@gmail.com>",
    "Keno Clayton <keno.clayton15@gmail.com>"
  ],
  "nyc": {
    "exclude": [
      "index.js",
      "launcher.js",
      "lib",
      "test"
    ],
    "sourceMap": false,
    "instrument": true,
    "cache": false,
    "all": true
  }
}
