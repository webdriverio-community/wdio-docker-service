{
  "name": "wdio-docker-service",
  "version": "3.3.1",
  "description": "WebdriverIO service to start and stop docker container (for Selenium and more)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stsvilik/wdio-docker-service.git"
  },
  "bugs": {
    "url": "https://github.com/stsvilik/wdio-docker-service/issues"
  },
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/index.js",
  "exports": {
    ".": [
      {
        "import": "./lib/index.js",
        "require": "./lib/cjs/index.js"
      },
      "./lib/cjs/index.js"
    ]
  },
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=20 || >=22"
  },
  "scripts": {
    "prepublishOnly": "rm -rf ./lib && npm run build",
    "build": "tsc",
    "build:dev": "rm -rf ./lib && tsc --sourceMap",
    "test": "eslint && npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:app": "TSX_TSCONFIG_PATH=./test/tsconfig.json wdio ./test/integration/docker-app/wdio.conf.ts",
    "test:selenium": "TSX_TSCONFIG_PATH=./test/tsconfig.json wdio ./test/integration/docker-selenium/wdio.conf.ts",
    "test:integration": "run-s build:dev test:app test:selenium"
  },
  "keywords": [
    "webdriverio",
    "wdio",
    "wdio-service",
    "docker",
    "tests"
  ],
  "author": "Simon Tsvilik",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.15.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node-fetch": "^2.6.13",
    "@vitest/coverage-v8": "^4.0.13",
    "@wdio/cli": "^9.20.1",
    "@wdio/eslint": "^0.1.2",
    "@wdio/local-runner": "^9.20.1",
    "@wdio/mocha-framework": "^9.20.1",
    "@wdio/spec-reporter": "^9.20.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13",
    "webdriverio": "^9.20.1"
  },
  "dependencies": {
    "@wdio/logger": "^9.18.0",
    "fs-extra": "^11.3.2",
    "node-fetch": "^3.3.2"
  },
  "contributors": [
    "Simon Tsvilik <webdevsimon@gmail.com>",
    "Keno Clayton <keno.clayton15@gmail.com>"
  ]
}
